<%- include('partials/_top') %>

<title><%= title %></title>

<%- include('partials/_middle') %> 

<h1><%= title %>: <%= genre.name %>  </h1>

<% if (genre_books.length) { %>
 <p><strong>Delete the following books before attempting to delete this genre</strong></p>

 <div style="margin-left: 20px; margin-top: 20px;">
    <h4>Books</h4>
    <dl>
        <% genre_books.forEach(book => { %>
            <dt>
                <a href="<%= book.url %>"><%= book.title %> </a>
            </dt>
            <dd><%= book.summary %> </dd>
        <% }) %>
    </dl>
</div>
<% } else { %>
    <p>Do you really want to delete this genre?</p>

    <form action="" method="post">
        <div class="form-group">
            <input type="hidden" class="form-control" id="genreid" name="genreid"
            required value="<%= genre._id %>">
        </div>
        <button class="btn btn-primary" type="submit">Delete</button>
    </form>
<% } %>

<%- include('partials/_bottom') %> 