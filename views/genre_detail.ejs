<%- include('partials/_top') %> 

<title><%= title %></title>

<%- include('partials/_middle') %> 

<h1>Genre: <%= genre.name %> </h1>

<div style="margin-left: 20px;margin-top: 20px">
    <h4>Books</h4>
    <% if (genre_books.length > 0) { %>
        <% genre_books.forEach(book => { %>
            <dt>
                <a href="<%= book.url %>"><%= book.title %> </a>
            </dt>
            <dd><% book.summary %> </dd>
        <% }) %>
    <% } else { %>
        <p>This genre has no books</p>
    <% } %>
    
</div><%- include('partials/_bottom') %> 